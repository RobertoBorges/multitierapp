@model BookShop.Web.Models.ViewModels.CartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="row mb-4">
    <div class="col">
        <h1>Shopping Cart</h1>
    </div>
</div>

@if (Model.Items.Count == 0)
{
    <div class="alert alert-info">
        <p>Your shopping cart is empty.</p>
        <a asp-controller="Books" asp-action="Index" class="btn btn-primary mt-3">Browse Books</a>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Cart Items</h5>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Book</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Items)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <img src="@item.ImageUrl" alt="@item.Title" class="me-3" style="width: 60px; height: 80px; object-fit: cover;" />
                                                <div>
                                                    <a asp-controller="Books" asp-action="Details" asp-route-id="@item.BookId" class="text-decoration-none">
                                                        <h6 class="mb-0">@item.Title</h6>
                                                    </a>
                                                    <small class="text-muted">@item.AuthorName</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>
                                            <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                                <input type="hidden" name="bookId" value="@item.BookId">
                                                <input type="number" name="quantity" value="@item.Quantity" min="1" max="10" class="form-control form-control-sm" style="width: 60px;">
                                                <button type="submit" class="btn btn-sm btn-outline-secondary ms-2">Update</button>
                                            </form>
                                        </td>
                                        <td>@item.Subtotal.ToString("C")</td>
                                        <td>
                                            <form asp-action="RemoveFromCart" method="post">
                                                <input type="hidden" name="bookId" value="@item.BookId">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Order Summary</h5>
                    <div class="d-flex justify-content-between my-3">
                        <span>Subtotal</span>
                        <span>@Model.TotalPrice.ToString("C")</span>
                    </div>
                    <div class="d-flex justify-content-between my-3">
                        <span>Shipping</span>
                        <span>Free</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between my-3">
                        <span class="fw-bold">Total</span>
                        <span class="fw-bold">@Model.TotalPrice.ToString("C")</span>
                    </div>
                    <a href="/Checkout" class="btn btn-primary w-100 mt-3">Proceed to Checkout</a>
                </div>
            </div>
            <div class="card mt-3">
                <div class="card-body">
                    <h5 class="card-title">Continue Shopping</h5>
                    <a asp-controller="Books" asp-action="Index" class="btn btn-outline-secondary w-100">Browse More Books</a>
                </div>
            </div>
        </div>
    </div>
}
